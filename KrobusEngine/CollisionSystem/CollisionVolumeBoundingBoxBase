#include "CollisionVolumeAABB.h"
#include "CollisionVolumeOBB.h"
#include "CollisionVolumeBSphere.h"
#include "CollisionVolumeBoundingBoxBase.h"
#include "PWMathTools.h"
#include "Visualizer.h"

CollisionVolumeBoundingBoxBase::~CollisionVolumeBoundingBoxBase() {
	DebugMsg::out("collision volume obb deleted");
}

const Vect& CollisionVolumeBoundingBoxBase::GetCornerMax() const {
	return CornerMax;
}

const Vect& CollisionVolumeBoundingBoxBase::GetCornerMin() const {
	return CornerMin;
}

const Matrix& CollisionVolumeBoundingBoxBase::GetWorld() const {
	return world;
}

const Vect& CollisionVolumeBoundingBoxBase::GetCenterInWorld() const {
	return CenterInWorld;
}

const float CollisionVolumeBoundingBoxBase::GetScaleSquared() const {
	return ScaleSquared;
}

const float CollisionVolumeBoundingBoxBase::GetScale() const {
	return Scale;
}

const Vect& CollisionVolumeBoundingBoxBase::GetHalfDiagonal() const {
	return HalfDiagonal;
}
